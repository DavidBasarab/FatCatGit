<Window 
    x:Class="FatCatGit.Gui.MainWindow" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Title="FatCatGit" 
    Height="350" 
    Width="525"
    WindowStyle="SingleBorderWindow" Loaded="FormLoaded">
	<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button
            x:Name="btnClone"
            Click="OnClick"
            Grid.Row="0"
            Grid.Column="0"
            Content="I Want to Clone a Repository"
            Margin="100"/>
    </Grid>
</Window>